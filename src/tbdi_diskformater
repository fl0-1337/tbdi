#!/bin/sh

#  DO NOT EDIT THE FOLLOWING FOUR FUNCTIONS
makelegacyswap(){
cat <<EOF | fdisk --wipe auto $TBDI_DEVICE
o
n
p


+${TBDI_SWAPSIZE}
n
p


+10G
n
p



w
EOF
}

makelegacynoswap(){
cat <<EOF | fdisk --wipe auto $TBDI_DEVICE
o
n
p


+10G
n
p



w
EOF
}

makeefiswap(){
cat <<EOF | gdisk $TBDI_DEVICE
o
Y
n


+100M

n


+${TBDI_SWAPSIZE}
8200
n


+10G

n




w
Y
EOF
}

makeefinoswap(){
cat <<EOF | gdisk $TBDI_DEVICE
o
Y
n


+100M

n


+10G

n




w
Y
EOF
}
